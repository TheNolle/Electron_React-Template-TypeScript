{
  "author": "Nolly <https://thenolle.com>",
  "name": "electron_react-template-typescript",
  "version": "1.0.0",
  "main": "dist/main/main.js",
  "description": "Electron-based app template that allows you to create a desktop app using React as a frontend. This template enables you to develop without relying on Create-React-App and provides a simple way to build and package your application for multiple platforms.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/TheNolle/Electron_React-Template-TypeScript"
  },
  "scripts": {
    "build": "webpack --config webpack.main.config.js && webpack --config webpack.renderer.config.js",
    "start": "pnpm run build && electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.23.8",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@electron-forge/cli": "^7.2.0",
    "@electron-forge/plugin-webpack": "^7.2.0",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "babel-loader": "^9.1.3",
    "electron": "^28.1.3",
    "html-webpack-plugin": "^5.6.0",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
}
